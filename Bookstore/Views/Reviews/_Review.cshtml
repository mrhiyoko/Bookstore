@model IEnumerable<Bookstore.Models.Review>


<ul>
@foreach (var item in Model) {
  
    <li>
        <div>
            <h4>@item.Rating /10</h4>
            <small>Author name: @item.Name </small>
        </div>
        <p>@Html.DisplayFor(modelItem => item.Comment)</p>
        <p>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</p>
    </li>
}
</ul>
